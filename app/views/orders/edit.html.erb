              <input name="zhifu" type="radio" value="2" /> <img src="/image/pay2.gif" align="absmiddle" />
            </div>
          </td></tr><tr><td height="60" align="right" colspan="2">
            <%form_tag :action => :tenpay do %>
              <%= image_submit_tag("/image/bt_submit.gif") %>
            <%end %>
          </td></tr>
      </table>
    </div><div class="BBU"></div><div class="BU"></div></div>
